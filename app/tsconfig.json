{
    "compilerOptions": {             
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",        
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "typeRoots": [
            "./src/types", // this is where you define your types
            "./node_modules/@types" //this where npm packages containing types are located
          ]
     
    }
}